{
  "name": "psyduck-panic",
  "version": "1.0.0",
  "description": "Psyduck Panic: Evolution Deluxe - A browser-based game",
  "type": "module",
  "packageManager": "pnpm@10.13.0",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "build:mobile": "astro check && astro build && pnpm cap sync",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "cap:add:ios": "pnpm cap add ios",
    "cap:add:android": "pnpm cap add android",
    "cap:sync": "pnpm cap sync",
    "cap:open:ios": "pnpm cap open ios",
    "cap:open:android": "pnpm cap open android",
    "ios": "pnpm build:mobile && pnpm cap:open:ios",
    "android": "pnpm build:mobile && pnpm cap:open:android"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arcade-cabinet/psyduck-panic.git"
  },
  "keywords": [
    "game",
    "astro",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arcade-cabinet/psyduck-panic/issues"
  },
  "homepage": "https://github.com/arcade-cabinet/psyduck-panic#readme",
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@capacitor/android": "^8.1.0",
    "@capacitor/app": "^8.0.1",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0",
    "@capacitor/device": "^8.0.1",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/ios": "^8.1.0",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/screen-orientation": "^8.0.1",
    "@capacitor/status-bar": "^8.0.1",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vite-pwa/astro": "^1.2.0",
    "animejs": "3.2.2",
    "astro": "^5.17.2",
    "idb": "^8.0.3",
    "pixi.js": "^8.16.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "workbox-window": "^7.4.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@biomejs/biome": "~2.3.15",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "jsdom": "^28.0.0",
    "playwright": "^1.58.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
